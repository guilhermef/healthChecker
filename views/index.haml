!!!
%html{:lang => "en"}
  %head
    %link{:href => "/stylesheets/normalize.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/bootstrap/css/bootstrap.min.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/index.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %title HealthChecker
  %body
    .navbar.navbar-inverse.navbar-static-top
      .navbar-inner
        .container
          %a.brand{href: '/'}
            HealthChecker
    .container
      .row
        .span3
          %h2 Projects
      .row
        - @config['projects'].each do |name, data|
          .span3.well.project{data: {healthcheck: "/project/#{name}.json"}}
            %h3=data['name']

    %script{:src => "/javascripts/lib/jquery-1.8.2.min.js", :type => "text/javascript"}
    %script{:src => "/javascripts/views/index.js", :type => "text/javascript"}

